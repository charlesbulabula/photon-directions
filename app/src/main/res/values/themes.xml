<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base app theme -->
    <style name="Theme.NeoMaps" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- System bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Compat colors so old attrs (colorPrimary, etc.) resolve -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_primary_dark</item>
        <item name="colorAccent">@color/md_theme_secondary</item>
    </style>

</resources>
